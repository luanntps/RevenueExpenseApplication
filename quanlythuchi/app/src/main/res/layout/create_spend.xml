<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="#f8e6cb"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvCreateSpendAmount"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TẠO PHIẾU CHI"
            android:textStyle="bold"
            android:textSize="20dip"
            android:layout_marginTop="20dp"/>
        <EditText
            android:id="@+id/edtCreateSpendAmount"
            android:layout_width="350dip"
            android:hint="Giá trị chi VD:1000000"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCreateSpendAmount"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:backgroundTint="@color/black"
            android:textCursorDrawable="@color/black"
            />
        <TextView
            android:id="@+id/tvCreateSpendDate"
            android:layout_marginTop="10dp"
            android:layout_width="350dip"
            android:text="00-00-0000"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtCreateSpendAmount"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:backgroundTint="@color/black"
            android:textCursorDrawable="@color/black"
            />
        <Spinner
            android:layout_marginTop="10dp"
            android:id="@+id/spSpendType"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvCreateSpendDate"

            android:layout_marginLeft="50dp"
            />
        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/edtCreateSpendNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spSpendType"
            android:layout_centerHorizontal="true"
            android:width="350dp"
            android:textAlignment="center"
            android:backgroundTint="@color/black"
            android:textCursorDrawable="@color/black"
            android:hint="Ghi chú"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#50000000"
            android:id="@+id/btnAddSpend"
            android:layout_marginTop="20dp"
            android:layout_below="@id/edtCreateSpendNote"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ic_add"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_add"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="THÊM PHIẾU CHI MỚI"
                android:textStyle="bold"
                android:textSize="20dip"
                android:textColor="@color/white"
                android:layout_toRightOf="@+id/ic_add"
                android:layout_centerVertical="true"
                android:layout_marginLeft="0dp"
                android:textAlignment="center"/>
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>